name: Teste Automatizado

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4
      - name: Configurar Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'
      - name: Instalar dependÃªncias
        run: |
          python -m pip install --upgrade pip
          pip install pytest
      - name: Executar testes
        run: |
          pytest
